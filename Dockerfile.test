FROM python:3.10-slim

# Install system dependencies including video processing tools and audio backends
RUN apt-get update && apt-get install -y \
    git \
    libsndfile1 \
    libsndfile1-dev \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the audiobox-aesthetics repository
COPY audiobox-aesthetics /app/audiobox-aesthetics

# Install additional Python packages for video and audio processing
RUN pip install moviepy soundfile

# Install audiobox-aesthetics
RUN cd audiobox-aesthetics && pip install -e .

# Create directories for input and output
RUN mkdir -p /app/input /app/output

# Copy our processing script and test script
COPY process_audio.py /app/
COPY test_torchaudio.py /app/

# Set bash as default entrypoint for testing
ENTRYPOINT ["/bin/bash", "-c"]